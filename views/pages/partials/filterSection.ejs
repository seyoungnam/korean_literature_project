<% if (locals.genre || locals.author_kr || locals.translator || locals.year) { %>
<div class="container py-2">
  <div class="col-12 p-2 rounded skyblue d-flex justify-content-start">
    <h5 class="badge badge-primary mr-1">
      <span class="align-middle"> Filter: </span>
    </h5>
    <!-- <i class="bi bi-funnel"></i> -->
    <!-- genre start -->
    <% if (genre) { %> <% if (typeof genre == "string") { %>
    <h6>
      <label class="badge badge-pill badge-light mr-1" id="breadcrumb_genre">
        <span class="align-middle"> <%= genre %></span>
      </label>
    </h6>
    <% } else {%> <% genre.forEach(function (item) { %>
    <h6>
      <label class="badge badge-pill badge-light mr-1" id="breadcrumb_genre">
        <span class="align-middle"> <%= item %></span>
      </label>
    </h6>
    <% }) %> <% } %> <% } %>
    <!-- genre end -->
    <!-- author_kr start -->
    <% if (author_kr) { %> <% if (typeof author_kr == "string") { %>
    <label class="badge badge-pill badge-light mr-1" id="breadcrumb_author_kr">
      <span class="align-middle"> <%= author_kr %></span>
    </label>
    <% } else {%> <% author_kr.forEach(function (item) { %>
    <label class="badge badge-pill badge-light mr-1" id="breadcrumb_author_kr">
      <span class="align-middle"> <%= item %></span>
    </label>
    <% }) %> <% } %> <% } %>
    <!-- author_kr end -->
    <!-- translator start -->
    <% if (translator) { %> <% if (typeof translator == "string") { %>
    <label class="badge badge-pill badge-light mr-1" id="breadcrumb_translator">
      <span class="pb-2 align-middle"> <%= translator %></span>
    </label>
    <% } else {%> <% translator.forEach(function (item) { %>
    <label class="badge badge-pill badge-light mr-1" id="breadcrumb_translator">
      <span class="pb-2 align-middle"> <%= item %></span>
    </label>
    <% }) %> <% } %> <% } %>
    <!-- translator end -->
    <!-- year start -->
    <% if (year) { %> <% if (typeof year == "string") { %>
    <label class="badge badge-pill badge-light mr-1" id="breadcrumb_year">
      <span class="pb-2 align-middle"> <%= year %></span>
    </label>
    <% } else {%> <% year.forEach(function (item) { %>
    <label class="badge badge-pill badge-light mr-1" id="breadcrumb_year">
      <span class="pb-2 align-middle"> <%= item %></span>
    </label>
    <% }) %> <% } %> <% } %>
    <!-- year end -->
  </div>
</div>

<% } %>
