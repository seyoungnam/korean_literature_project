<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <article class="speakerslist maincontent">
        <div class="row">
          <div class="col-sm-3">
            <img
              class="speakerslist-img img-fluid"
              src="/images/speakers/homodeus.jpeg"
              alt="Photo of <%=details.book_journal_title%>"
            />
          </div>
          <div class="col-sm-9">
            <h4 class="speakerslist-title"><%=details.work_title%></h4>
            <div class="speakerslist-name">
              written by
              <a href="/author/<%=details.author_kr%>"> <%=details.author%></a>
            </div>
            <p class="speakerslist-info mt-2"><%=details.year%> | <%=details.publisher%></p>
          </div>
        </div>
      </article>
      <hr />
      <dl class="row">
        <dt class="col-sm-3">Genre</dt>
        <dd class="col-sm-9"><%=details.genre%></dd>

        <dt class="col-sm-3">Original Title</dt>
        <dd class="col-sm-9"><%=details.work_title%></dd>

        <dt class="col-sm-3">Source</dt>
        <dd class="col-sm-9"><%=details.book_journal_title%></dd>

        <dt class="col-sm-3">Author</dt>
        <dd class="col-sm-9"><%=details.author%></dd>

        <dt class="col-sm-3">Author (Korean)</dt>
        <dd class="col-sm-9"><%=details.author_kr%></dd>

        <dt class="col-sm-3">Translator</dt>
        <dd class="col-sm-9"><%=details.translator%></dd>

        <dt class="col-sm-3">Publisher</dt>
        <dd class="col-sm-9"><%=details.publisher%></dd>

        <dt class="col-sm-3">Published Year</dt>
        <dd class="col-sm-9"><%=details.year%></dd>
      </dl>
    </div>
  </div>
</div>
